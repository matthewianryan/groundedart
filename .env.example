# API configuration (used by the API app and Alembic migrations)
DATABASE_URL=postgresql+asyncpg://groundedart:groundedart@localhost:5432/groundedart
API_CORS_ORIGINS=http://localhost:5173

# Used to hash opaque session/check-in tokens stored in DB.
TOKEN_HASH_SECRET=dev-only-change-me
# Shared secret for admin moderation endpoints (header: X-Admin-Token).
ADMIN_API_TOKEN=dev-admin-token-change-me

# Check-in configuration (seconds/meters).
CHECKIN_CHALLENGE_TTL_SECONDS=120
CHECKIN_TOKEN_TTL_SECONDS=600
MAX_LOCATION_ACCURACY_M=50
# Solana RPC used by the API for tip receipt verification (devnet for demos).
SOLANA_RPC_URL=https://api.devnet.solana.com

# Local development media storage (captures upload).
MEDIA_DIR=./.local_media
UPLOAD_ALLOWED_MIME_TYPES=["image/jpeg","image/png","image/webp"]
UPLOAD_MAX_BYTES=1500000

# Web app configuration
VITE_API_ORIGIN=http://localhost:8000
# Google Maps Platform key with Maps JS, Directions, Places, and Geocoding APIs enabled (HTTP referrer restricted)
VITE_GOOGLE_MAPS_API_KEY=replace-with-your-key
# Solana RPC used by the web wallet adapter (devnet for demos).
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com

