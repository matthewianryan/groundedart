{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CreateCaptureRequest",
  "type": "object",
  "required": ["node_id", "checkin_token"],
  "properties": {
    "node_id": { "type": "string", "format": "uuid" },
    "checkin_token": { "type": "string" },
    "attribution_artist_name": { "type": ["string", "null"] },
    "attribution_artwork_title": { "type": ["string", "null"] },
    "attribution_source": { "type": ["string", "null"] },
    "attribution_source_url": { "type": ["string", "null"] },
    "rights_basis": {
      "type": ["string", "null"],
      "enum": ["i_took_photo", "permission_granted", "public_domain", null]
    },
    "rights_attestation": { "type": ["boolean", "null"] },
    "publish_requested": { "type": ["boolean", "null"] }
  }
}
