{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NodePublic",
  "type": "object",
  "required": ["id", "visibility", "name", "category", "lat", "lng", "radius_m", "min_rank"],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "visibility": { "type": "string", "enum": ["visible"] },
    "name": { "type": "string" },
    "description": { "type": ["string", "null"] },
    "category": { "type": "string" },
    "lat": { "type": "number" },
    "lng": { "type": "number" },
    "radius_m": { "type": "integer", "minimum": 25 },
    "min_rank": { "type": "integer", "minimum": 0 },
    "image_url": { "type": ["string", "null"] },
    "image_attribution": { "type": ["string", "null"] },
    "image_source_url": { "type": ["string", "null"] },
    "image_license": { "type": ["string", "null"] }
  }
}
