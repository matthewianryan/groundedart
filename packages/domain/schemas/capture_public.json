{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CapturePublic",
  "type": "object",
  "required": [
    "id",
    "node_id",
    "state",
    "visibility",
    "created_at",
    "image_url",
    "attribution_artist_name",
    "attribution_artwork_title",
    "attribution_source",
    "attribution_source_url",
    "rights_basis",
    "rights_attested_at"
  ],
  "properties": {
    "id": { "type": "string", "format": "uuid" },
    "node_id": { "type": "string", "format": "uuid" },
    "state": {
      "type": "string",
      "enum": ["draft", "pending_verification", "verified", "rejected", "hidden"]
    },
    "visibility": { "type": "string", "enum": ["private", "public"] },
    "created_at": { "type": "string", "format": "date-time" },
    "image_url": { "type": ["string", "null"] },
    "attribution_artist_name": { "type": ["string", "null"] },
    "attribution_artwork_title": { "type": ["string", "null"] },
    "attribution_source": { "type": ["string", "null"] },
    "attribution_source_url": { "type": ["string", "null"] },
    "rights_basis": {
      "type": ["string", "null"],
      "enum": ["i_took_photo", "permission_granted", "public_domain", null]
    },
    "rights_attested_at": { "type": ["string", "null"], "format": "date-time" }
  }
}
