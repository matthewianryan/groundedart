{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TipIntentResponse",
  "type": "object",
  "required": ["tip_intent_id", "to_pubkey", "amount_lamports", "cluster", "memo_text"],
  "properties": {
    "tip_intent_id": { "type": "string", "format": "uuid" },
